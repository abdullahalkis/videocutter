<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/lib/com.app.chasebank"
    xmlns:rsb="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aa"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <VideoView
        android:id="@+id/videoView"
        android:layout_width="389dp"
        android:layout_height="360dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="8dp"
        rsb:layout_constraintBottom_toBottomOf="parent"
        rsb:layout_constraintEnd_toEndOf="parent"
        rsb:layout_constraintHorizontal_bias="0.615"
        rsb:layout_constraintStart_toStartOf="parent"
        rsb:layout_constraintTop_toTopOf="parent"
        rsb:layout_constraintVertical_bias="0.0" />


    <!--rsb:textAboveThumbsColor="#000000"
    rsb:activeColor="#ED1C24"-->

    <TextView
        android:id="@+id/tvLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textColor="#000000"
        rsb:layout_constraintEnd_toEndOf="parent"
        rsb:layout_constraintHorizontal_bias="0.053"
        rsb:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="356dp" />

    <TextView
        android:id="@+id/tvRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textColor="#000000"
        rsb:layout_constraintEnd_toEndOf="parent"
        rsb:layout_constraintHorizontal_bias="0.978"
        rsb:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="264dp"
        tools:ignore="MissingConstraints" />

    <!--    <TextView
        android:id="@+id/tvInstructions"
        android:layout_width="379dp"
        android:layout_height="33dp"
        android:layout_below="@+id/tvRight"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />-->
    <TextView
        android:id="@+id/uploadVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="uploadVideo"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498"
        rsb:layout_constraintBottom_toBottomOf="parent"
        rsb:layout_constraintEnd_toEndOf="parent"
        rsb:layout_constraintHorizontal_bias="0.0"
        rsb:layout_constraintStart_toStartOf="parent"
        rsb:layout_constraintTop_toBottomOf="@+id/videoView"
        rsb:layout_constraintVertical_bias="0.365" />

    <TextView
        android:id="@+id/cropVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="cropVideo"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uploadVideo"
        app:layout_constraintVertical_bias="0.17"
        rsb:layout_constraintBottom_toBottomOf="parent"
        rsb:layout_constraintEnd_toEndOf="parent"
        rsb:layout_constraintHorizontal_bias="0.588"
        rsb:layout_constraintStart_toEndOf="@+id/uploadVideo"
        rsb:layout_constraintTop_toBottomOf="@+id/videoView"
        rsb:layout_constraintVertical_bias="0.34" />

    <Button
        android:id="@+id/wp"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/cropVideo"
        android:layout_alignRight="@+id/cropVideo"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/oval_shape"
        android:text="What'sApp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.847"
        rsb:layout_constraintBottom_toBottomOf="parent"
        rsb:layout_constraintEnd_toEndOf="parent"
        rsb:layout_constraintHorizontal_bias="0.085"
        rsb:layout_constraintStart_toStartOf="parent"
        rsb:layout_constraintTop_toBottomOf="@+id/uploadVideo"
        rsb:layout_constraintVertical_bias="1.0" />


    <Button
        android:id="@+id/instagram"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/wp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/oval_shape"
        android:text="Instagram"
        android:textColor="@android:color/black"
        rsb:layout_constraintBottom_toBottomOf="parent"
        rsb:layout_constraintEnd_toEndOf="parent"
        rsb:layout_constraintHorizontal_bias="0.772"
        rsb:layout_constraintStart_toEndOf="@+id/wp"
        rsb:layout_constraintTop_toBottomOf="@+id/cropVideo"
        rsb:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/bolText"
        android:layout_width="138dp"
        android:layout_height="53dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/white"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textStyle="bold"
        rsb:layout_constraintBottom_toTopOf="@+id/uploadVideo"
        rsb:layout_constraintEnd_toEndOf="parent"
        rsb:layout_constraintHorizontal_bias="0.498"
        rsb:layout_constraintStart_toStartOf="parent"
        rsb:layout_constraintTop_toBottomOf="@+id/videoView"
        rsb:layout_constraintVertical_bias="0.542" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="Kac saniyede bir bölsün"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20sp"
        rsb:layout_constraintBottom_toTopOf="@+id/uploadVideo"
        rsb:layout_constraintEnd_toStartOf="@+id/bolText"
        rsb:layout_constraintHorizontal_bias="0.0"
        rsb:layout_constraintStart_toStartOf="parent"
        rsb:layout_constraintTop_toBottomOf="@+id/videoView" />

    <Button
        android:id="@+id/bolBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="Böl"
        rsb:layout_constraintBottom_toTopOf="@+id/cropVideo"
        rsb:layout_constraintEnd_toEndOf="parent"
        rsb:layout_constraintHorizontal_bias="0.594"
        rsb:layout_constraintStart_toEndOf="@+id/bolText"
        rsb:layout_constraintTop_toBottomOf="@+id/videoView"
        rsb:layout_constraintVertical_bias="0.461" />


</android.support.constraint.ConstraintLayout>